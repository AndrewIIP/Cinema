<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>welcome.jsp</welcome-file>
    </welcome-file-list>

    <request-character-encoding>UTF-8</request-character-encoding>

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>controller.EntranceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/shows_you/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LangFilter</filter-name>
        <filter-class>controller.filters.LangFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>LangFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>controller.filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>Roler</filter-name>
        <filter-class>controller.filters.RolesFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Roler</filter-name>
        <url-pattern>/shows_you/*</url-pattern>
    </filter-mapping>

    <!--<session-config>-->
        <!--<session-timeout>1</session-timeout>-->
    <!--</session-config>-->
</web-app>